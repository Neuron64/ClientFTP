<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_file"
        tools:text="Name File"/>
    <TextView
        android:id="@+id/tv_extension_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_file"
        tools:text="File Extension"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date_last_modification"
        app:layout_constraintTop_toBottomOf="@+id/tv_extension_file"
        tools:text="Date last modification"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_path_file"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_last_modification"
        tools:text="Path File"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_file_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_path_file"
        tools:text="File Size"/>
</android.support.constraint.ConstraintLayout>